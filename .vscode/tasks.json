{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "TeXcount Thesis",
            "type": "shell",
            "command": "cd Thesis && texcount -merge main.tex",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Compile Front",
            "type": "shell",
            "command": "cd Thesis/Front && xelatex -interaction=nonstopmode -file-line-error main",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "taskName": "Compile All",
            "type": "shell",
            "command": "cd Thesis && pdflatex -interaction=nonstopmode -file-line-error Main; pdflatex -interaction=nonstopmode -file-line-error Print",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "dependsOn": ["Compile Front"]
        },
        {
            "taskName": "Compile Presentation",
            "type": "shell",
            "command": "cd Presentation; xelatex -interaction=nonstopmode -file-line-error presentation",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}